{
  "name": "tinymce-monorepo",
  "private": true,
  "workspaces": [
    "modules/*"
  ],
  "resolutions": {
    "@typescript-eslint/*": "8.31.0",
    "eslint": "9.25.1",
    "prismjs": "1.29.0"
  },
  "overrides": {
    "@typescript-eslint/eslint-plugin": "8.31.0",
    "@typescript-eslint/parser": "8.31.0",
    "@typescript-eslint/utils": "8.31.0",
    "@typescript-eslint/type-utils": "8.31.0",
    "@typescript-eslint/typescript-estree": "8.31.0",
    "@typescript-eslint/visitor-keys": "8.31.0",
    "@typescript-eslint/scope-manager": "8.31.0",
    "typescript-eslint": "8.31.0",
    "eslint": "9.25.1",
    "prismjs": "1.29.0"
  },
  "scripts": {
    "tinymce-grunt": "grunt --gruntfile modules/tinymce/Gruntfile.js",
    "tinymce-rollup": "run-s \"tinymce-grunt dev rollup\"",
    "oxide-icons-build": "bun run -F @tinymce/oxide-icons-default build",
    "oxide-icons-ci": "bun run -F @tinymce/oxide-icons-default ci",
    "oxide-components-ci": "bun run -F @tinymce/oxide-components ci",
    "oxide-components-build": "bun lerna run build --scope @tinymce/oxide-components --include-dependencies",
    "oxide-build": "bun run -F @tinymce/oxide build",
    "oxide-start": "bun run -F @tinymce/oxide start",
    "oxide-ci": "bun run -F @tinymce/oxide ci",
    "agar-sw-build": "bun run -F @tinymce/agar-sw build",
    "tsc": "bun x tsc -b",
    "watch": "bun x tsc -b -w",
    "eslint": "lerna exec --stream --no-bail -- eslint --max-warnings=0 src/**/*.ts",
    "start": "bun run tinymce-grunt start",
    "dev": "npm-run-all oxide-icons-build oxide-build -p tsc \"tinymce-grunt dev\"",
    "changie-merge": "changie merge -u '## Unreleased'",
    "changie-batch": "changie batch auto --project",
    "ci": "npm-run-all -p oxide-ci oxide-icons-ci oxide-components-ci -p tsc \"tinymce-grunt dev\"",
    "ci-seq": "run-s agar-sw-build oxide-ci oxide-icons-ci oxide-components-ci tsc \"tinymce-grunt dev\"",
    "ci-all": "npm-run-all -p changie-merge eslint ci -s tinymce-rollup",
    "ci-all-seq": "npm-run-all -p eslint ci-seq -s tinymce-rollup",
    "local-ci": "run-s -s ci-all test",
    "test": "run-s headless-test browser-test",
    "build": "npm-run-all -p oxide-icons-ci oxide-ci oxide-components-ci -s tinymce-grunt",
    "prepublishOnly": "run-s oxide-icons-ci",
    "browser-test": "grunt browser-auto",
    "browser-test-manual": "grunt browser-manual",
    "headless-test": "grunt headless-auto",
    "headless-test-firefox": "grunt headless-auto --bedrock-browser=firefox-headless",
    "headless-test-manual": "grunt headless-manual",
    "bedrock": "npx bedrock --chunk=5000 --customRoutes modules/tinymce/src/core/test/json/routes.json",
    "test-one": "bun x tsc && npx bedrock-auto -b chrome-headless -f",
    "tinymce-dev": "bun --cwd modules/tinymce dev"
  },
  "devDependencies": {
    "@ephox/bedrock-client": "^15.0.0",
    "@ephox/bedrock-server": "^15.1.1",
    "@ephox/oxide-icons-tools": "^4.0.0",
    "@ephox/swag": "^4.6.0",
    "@rspack/cli": "^1.6.7",
    "@rspack/core": "^1.6.7",
    "@rspack/dev-server": "^1.1.4",
    "@tinymce/eslint-plugin": "^3.0.0",
    "@tinymce/moxiedoc": "^0.3.0",
    "@types/chai": "^5.2.3",
    "@types/chai-as-promised": "^8.0.2",
    "chai": "^6.2.1",
    "chai-as-promised": "^8.0.2",
    "chalk": "^5.6.2",
    "changie": "^1.24.0",
    "emojilib": "^2.4.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-security-node": "^1.1.4",
    "fast-check": "^4.4.0",
    "fork-ts-checker-webpack-plugin": "^9.1.0",
    "grunt": "^1.5.3",
    "grunt-contrib-clean": "^2.0.0",
    "grunt-contrib-concat": "^2.0.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-cssmin": "^5.0.0",
    "grunt-contrib-symlink": "^1.0.0",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-nuget-pack": "^1.0.1",
    "grunt-shell": "^4.0.0",
    "grunt-stylelint": "^0.20.1",
    "grunt-terser": "^2.0.0",
    "grunt-webpack": "^7.0.1",
    "jiti": "^2.6.1",
    "lerna": "^9.0.3",
    "less": "4.2.2",
    "less-plugin-autoprefix": "^2.0.0",
    "less-plugin-preset-env": "^2.0.2",
    "load-grunt-tasks": "^5.1.0",
    "moxie-zip": "0.0.4",
    "npm-run-all2": "^7.0.2",
    "postcss": "^8.4.39",
    "postcss-preset-env": "^10.5.0",
    "resolve": "^1.22.11",
    "rollup": "^4.53.3",
    "rollup-plugin-string": "^3.0.0",
    "source-map-loader": "^5.0.0",
    "string-replace-loader": "^3.3.0",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-less": "^3.0.1",
    "stylelint-order": "^7.0.0",
    "terser": "^5.44.1",
    "ts-checker-rspack-plugin": "^1.2.1",
    "ts-loader": "^9.5.4",
    "tsconfig-paths-webpack-plugin": "^4.2.0",
    "tslib": "^2.8.1",
    "twemoji": "^14.0.2",
    "typescript": "^5.9.3",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.0"
  }
}
