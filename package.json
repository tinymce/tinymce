{
  "private": true,
  "workspaces": [
    "modules/*"
  ],
  "scripts": {
    "tinymce-grunt": "grunt --gruntfile modules/tinymce/Gruntfile.js",
    "tinymce-rollup": "run-s \"tinymce-grunt dev rollup\"",
    "oxide-icons-build": "yarn -s --cwd modules/oxide-icons-default build",
    "oxide-icons-ci": "yarn -s --cwd modules/oxide-icons-default ci",
    "oxide-components-ci": "yarn -s --cwd modules/oxide-components ci",
    "oxide-components-build": "yarn -s lerna run build --scope @tinymce/oxide-components --include-dependencies",
    "oxide-build": "yarn -s --cwd modules/oxide build",
    "oxide-start": "yarn -s --cwd modules/oxide start",
    "oxide-ci": "yarn -s --cwd modules/oxide ci",
    "agar-sw-build": "yarn -s --cwd modules/agar-sw build",
    "tsc": "tsc -b",
    "watch": "tsc -b -w",
    "eslint": "lerna exec --stream --no-bail -- eslint --max-warnings=0 src/**/*.ts",
    "start": "yarn -s tinymce-grunt start",
    "dev": "npm-run-all agar-sw-build oxide-icons-build oxide-build -p tsc \"tinymce-grunt dev\"",
    "changie-merge": "changie merge -u '## Unreleased'",
    "changie-batch": "changie batch auto --project",
    "ci": "npm-run-all -p oxide-ci oxide-icons-ci oxide-components-ci -p tsc \"tinymce-grunt dev\"",
    "ci-seq": "run-s agar-sw-build oxide-ci oxide-icons-ci oxide-components-ci tsc \"tinymce-grunt dev\"",
    "ci-all": "npm-run-all -p changie-merge eslint ci -s tinymce-rollup",
    "ci-all-seq": "npm-run-all -p eslint ci-seq -s tinymce-rollup",
    "local-ci": "run-s -s ci-all test",
    "test": "run-s headless-test browser-test",
    "build": "npm-run-all -p oxide-icons-ci oxide-ci oxide-components-ci -s tinymce-grunt",
    "prepublishOnly": "run-s oxide-icons-ci",
    "browser-test": "grunt browser-auto",
    "browser-test-manual": "grunt browser-manual",
    "headless-test": "grunt headless-auto",
    "headless-test-firefox": "grunt headless-auto --bedrock-browser=firefox-headless",
    "headless-test-manual": "grunt headless-manual",
    "bedrock": "bedrock --chunk=5000 --customRoutes modules/tinymce/src/core/test/json/routes.json",
    "test-one": "yarn tsc && yarn bedrock-auto -b chrome-headless -f",
    "tinymce-dev": "yarn --cwd modules/tinymce dev"
  },
  "devDependencies": {
    "@ephox/bedrock-client": "^15.0.0",
    "@ephox/bedrock-server": "^15.0.4",
    "@ephox/oxide-icons-tools": "^4.0.0",
    "@ephox/swag": "^4.6.0",
    "@rspack/cli": "^1.5.2",
    "@rspack/core": "^1.5.2",
    "@rspack/dev-server": "^1.1.4",
    "@tinymce/eslint-plugin": "^3.0.0",
    "@tinymce/moxiedoc": "^0.3.0",
    "@types/chai": "^5.0.1",
    "@types/chai-as-promised": "^8.0.2",
    "chai": "^5.1.2",
    "chai-as-promised": "^8.0.1",
    "chalk": "^4.1.0",
    "changie": "^1.14.0",
    "emojilib": "^2.4.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-security-node": "^1.1.4",
    "fast-check": "^2.23.0",
    "fork-ts-checker-webpack-plugin": "^9.0.2",
    "grunt": "^1.5.3",
    "grunt-contrib-clean": "^2.0.0",
    "grunt-contrib-concat": "^2.0.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-cssmin": "^5.0.0",
    "grunt-contrib-symlink": "^1.0.0",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-nuget-pack": "^1.0.1",
    "grunt-shell": "^4.0.0",
    "grunt-stylelint": "^0.20.1",
    "grunt-terser": "^2.0.0",
    "grunt-webpack": "^7.0.0",
    "jiti": "^2.4.2",
    "lerna": "^8.1.2",
    "less": "^4.2.0",
    "less-plugin-autoprefix": "^2.0.0",
    "less-plugin-preset-env": "^2.0.2",
    "load-grunt-tasks": "^5.1.0",
    "moxie-zip": "0.0.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.39",
    "postcss-preset-env": "^10.1.3",
    "resolve": "^1.18.1",
    "rollup": "^4.28.1",
    "rollup-plugin-string": "^3.0.0",
    "source-map-loader": "^5.0.0",
    "string-replace-loader": "^3.0.3",
    "stylelint": "^16.6.1",
    "stylelint-config-standard": "^37.0.0",
    "stylelint-less": "^3.0.1",
    "stylelint-order": "^6.0.4",
    "terser": "^5.28.1",
    "ts-checker-rspack-plugin": "^1.1.5",
    "ts-loader": "^9.5.2",
    "tsconfig-paths-webpack-plugin": "^4.2.0",
    "tslib": "^2.8.1",
    "twemoji": "^14.0.2",
    "typescript": "^5.7.3",
    "webpack": "^5.74.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.0"
  }
}
