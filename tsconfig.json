{
  "compilerOptions": {
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strict": true,
    "moduleResolution": "node",
    "target": "es5",
    "module": "es2015",
    "lib": ["es2015"],
    "declaration": true,
    "sourceMap": true,
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "ephox/boss/test/*": ["src/test/ts/module/ephox/boss/test/*"],
      "ephox/boss/demo/*": ["src/demo/ts/ephox/boss/demo/*"],
      "ephox/boss/*": ["src/main/ts/ephox/boss/*"],
      "@ephox/boss": ["src/main/ts/ephox/boss/api/Main.ts"]
    }
  },
  "include": [
    "src/demo/ts",
    "src/main/ts",
    "src/test/ts",
    "node_modules/@ephox/**/*/api/Main.d.ts"
  ]
}
