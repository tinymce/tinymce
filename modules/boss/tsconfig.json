    "rootDir": "src",
    "baseUrl": ".",
    "tsBuildInfoFile": "lib/tsconfig.tsbuildinfo",
    "paths": {
      "ephox/boss/test/*": ["src/test/ts/module/ephox/boss/test/*"],
