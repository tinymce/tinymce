  },
  "include": [
    "src/demo/ts",
    "src/main/ts",
    "src/test/ts",
  ],
  "references": [
    { "path": "../agar" },
    { "path": "../boss" },
    { "path": "../katamari" },
    { "path": "../phoenix" },
    { "path": "../polaris" },
    { "path": "../sugar" },
  ]
