{
  "name": "tinymce",
  "tags": [ "open-source", "editor" ],
  "namedInputs": {
    "tinymce": [
      "ts-globals",
      "{projectRoot}/tsconfig.json",
      "{projectRoot}/src/**/main/**/*.ts"
    ]
  },
  "targets": {
    "build": {
      "inputs": [
        "tinymce",
        "{projectRoot}/Gruntfile.js"
      ],
      "dependsOn": [
        "lint",
        "^build"
      ],
      "outputs": [
        "{projectRoot}/dist",
        "{projectRoot}/js",
        "{projectRoot}/lib"
      ]
    },
    "test": {
      "inputs": [
        "tinymce",
        "{projectRoot}/src/**/test/**/*.ts"
      ],
      "dependsOn": [
        "build"
      ]
    }
  }
}
